{
  "type": "object",
  "title": "Signup Params",
  "required": [
    "email",
    "password"
  ],
  "properties": {
    "email": {
      "type": "string",
      "pattern": "^(?:[0-9a-zA-Z]+(?:[0-9a-zA-Z-_.]){0,}){0,}[0-9a-zA-Z]@(?:(?:[0-9a-zA-Z]+(?:[0-9a-zA-Z-]){0,}){0,}[0-9a-zA-Z].){1,}[a-zA-Z]{2,20}$",
      "format": "email",
      "description": "email"
    },
    "password": {
      "type": "string",
      "minLength": 6,
      "maxLength": 20,
      "pattern": "^[a-zA-Z0-9]{6,20}$",
      "description": "password"
    }
  }
}
